<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
 
<main class="container">
    <br>
    <a href="/products/add" class = "btn btn-primary">Add Product</a href>
    <br>
    <br>
    <table class="table table-success table-striped-columns">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Company</th>
              <th scope="col">Price</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index <  ProductList.length; index++){%>

                <tr>
                    <td><%= ProductList[index].name %></td>
                    <td><%= ProductList[index].company %></td>
                    <td><%= ProductList[index].price %></td>
                    <td>
                      <a href="/products/edit/<%= ProductList[index].id %>" class="btn btn-info btn-sm"> <i class="fa-solid fa-file-pen fa-lg"></i>Edit</a>
                    </td>
                    <td>
                      <a href="/products/delete/<%= ProductList[index].id %>" class="btn btn-dark btn-sm" onclick="return confirm('Are you sure you want to delete?')"><i class="fa-sharp fa-solid fa-trash"></i></a>
                    </td>
                </tr>

            <% } %>
          </tbody>
      </table>
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>



